# Analytics Infrastructure Environment Variables
# Copy this file to .env and update with your values

# PostgreSQL Configuration
POSTGRES_USER=analytics_admin
POSTGRES_PASSWORD=change_this_strong_password_32_chars
POSTGRES_DB=postgres

# Database Names
UMAMI_DATABASE=umami_db
GLITCHTIP_DATABASE=glitchtip_db

# Umami Configuration
# Generate a random 32-character string for APP_SECRET
# Example: openssl rand -hex 16
UMAMI_APP_SECRET=change_this_random_32_char_string
UMAMI_HOSTNAME=0.0.0.0
# Default Umami login: admin/umami (change immediately after first login)

# GlitchTip Configuration
# Generate a 50-character random string for SECRET_KEY
# Example: openssl rand -base64 38 | head -c 50
GLITCHTIP_SECRET_KEY=change_this_50_char_random_string_for_security
GLITCHTIP_DOMAIN=http://localhost:3002
GLITCHTIP_FROM_EMAIL=errors@sbozh.me

# Email Configuration (optional - for GlitchTip alerts)
# For Gmail: smtp://user:pass@smtp.gmail.com:587/?_default_from_email=errors@sbozh.me&_use_tls=True
# For local testing: smtp://localhost:25
GLITCHTIP_EMAIL_URL=smtp://localhost:25

# Alert Webhook URLs (optional)
# Slack webhook for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# Custom webhook endpoint
ALERT_WEBHOOK_URL=https://your-monitoring-service.com/webhook
WEBHOOK_API_KEY=your_webhook_api_key

# Resource Limits (optional, defaults shown)
# Adjust based on your server capacity
POSTGRES_MEMORY=512M
UMAMI_MEMORY=512M
GLITCHTIP_MEMORY=512M
GLITCHTIP_WORKER_MEMORY=256M
REDIS_MEMORY=256M

# Monitoring Configuration (for automated reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=monitoring@sbozh.me
SMTP_PASSWORD=your_email_password

# API Access Tokens (generate after initial setup)
# Used by monitoring scripts
UMAMI_API_URL=http://localhost:3001/api
UMAMI_USERNAME=admin
UMAMI_PASSWORD=change_after_setup
GLITCHTIP_AUTH_TOKEN=generate_from_glitchtip_ui