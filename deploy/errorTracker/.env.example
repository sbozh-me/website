# GlitchTip Error Tracking Infrastructure Environment Variables
# Copy this file to .env and update with your values

# PostgreSQL Configuration
POSTGRES_PASSWORD=change_this_strong_password_32_chars

# GlitchTip Configuration
# Generate a 64-character random string for SECRET_KEY
# Example: openssl rand -hex 32
SECRET_KEY=change_this_64_char_random_string_for_security_purposes

# Domain Configuration
# For local development: http://localhost:3002
# For production: https://errors.yourdomain.com
GLITCHTIP_DOMAIN=http://localhost:3002

# Email Configuration
# Console email (development - prints to logs)
EMAIL_URL=consolemail://
# Gmail example: smtp+tls://user:password@smtp.gmail.com:587
# AWS SES example: smtp+tls://smtp-user:smtp-password@email-smtp.us-east-1.amazonaws.com:587
DEFAULT_FROM_EMAIL=errors@sbozh.me

# User Registration
# Set to False in production to prevent open registration
ENABLE_OPEN_USER_REGISTRATION=True

# Performance Configuration (optional)
# Celery worker settings
CELERY_WORKER_AUTOSCALE=1,3
CELERY_WORKER_CONCURRENCY=2

# Resource Limits (optional, for reference)
# Recommended minimum: 512MB per service
# POSTGRES_MEMORY=512M
# REDIS_MEMORY=256M
# GLITCHTIP_WEB_MEMORY=512M
# GLITCHTIP_WORKER_MEMORY=512M

# Sentry SDK Configuration (for your Next.js app)
# After setup, get DSN from: GlitchTip UI -> Project -> Settings -> DSN
# Add to your app's .env.local:
# NEXT_PUBLIC_GLITCHTIP_DSN=http://your-key@localhost:3002/1
